<h2>Your cart</h2>

<table class="table table-striped-columns">
      <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Price</th>
      <th scope="col">Qty</th>
    </tr>
  </thead>
  <tbody>
    <% total_price = 0 %>
    <% total_qty = 0 %>
    <% @items.each do |item| %>
    <tr>
      <td><%= item[0].title %></td>
      <td><%= item[0].price %></td>
      <td><%= item[1] %></td>
    </tr>
    <% total_price += item[0].price * item[1].to_i %>
    <% total_qty += item[1].to_i %>
    <% end %>

    <tr>
      <td></td>
      <td>Total: <%= total_price %></td>
      <td><%= total_qty %></td>
    </tr>

  </tbody>
  </table>


  <form action="/place_order" method="POST" role="form">
    <input name="order[scope]" type="hidden" value="<%= @orders_input %>" />

  <div class="form-group">
    <label>NAME:</label>
    <input name="order[name]" type="text" class="form-control" placeholder="Enter name" >
  </div>

  <div class="form-group">
    <label>PHONE:</label>
    <input name="order[phone]" type="text" class="form-control" placeholder="Enter phone" >
  </div>

  <div class="form-group">
    <label>DELIVERY ADDRESS:</label>
    <textarea name="order[address]" class="form-control" placeholder="Delivery address" ></textarea>
  </div>

<button class="btn btn-success btn-lg" type="submit" >Place this order!</button>

</form>
